<div class="col-md-6">
  <h3>Update blog post:</h3>
  {{!-- form to update blog post --}}
  <form class="form new-blog-form">
    <div class="form-group">
      <label for="blog-name">Blog Post:</label>
      <input class="form-input" type="text" id="blog-name" value="{{name}}" name="blog-name"/>
    </div>
    <div class="form-group">
      <label for="blog-desc">Description:</label>
      <textarea class="form-input" id="blog-desc" name="blog-desc">{{description}}</textarea>
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-primary blog-update" data-id="{{id}}">Update</button>
    </div>
  </form>
</div>

  <script src="/js/dashboard.js"></script>